<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".helpfragment3">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/bangers"
        android:gravity="center"
        android:text="How do I manage to return a damaged product?"
        android:textColor="?attr/text_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="150dp"
        android:gravity="left"
        android:text="Answer:"
        android:textColor="?attr/text_color"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="30dp"
        android:textColor="?attr/text_color"
        android:text="1. You must submit documentation (such as receipts, images of damaged items
, etc.) to our email." />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="30dp"
        android:text="2. Following our approval, you will be reimbursed and asked to return the
damaged products to us within 5 days. If not, your return request will be automatically cancelled."
        android:textColor="?attr/text_color" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="315dp"
        android:layout_marginEnd="30dp"
        android:text="3. You must provide evidence of completed returns of items."
        android:textColor="?attr/text_color" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="365dp"
        android:layout_marginEnd="30dp"
        android:text="4. We will provide receipt after refund completely."
        android:textColor="?attr/text_color" />

</FrameLayout>